<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin"
    android:padding="20dp"
    android:orientation="vertical">

<ImageView
    android:layout_width="200dp"
    android:layout_height="180dp"
    android:layout_marginTop="15dp"
    android:src="@drawable/admin"
    android:layout_marginLeft="65dp"
    android:id="@+id/ImageAdmin"
    android:scaleType="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADMIN"
        android:textSize="28dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
       android:layout_marginLeft="125dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Bus Details"
        android:textColor="@color/pureWhite"
        android:background="@drawable/bg"
        android:layout_marginTop="20dp"
        android:id="@+id/btnAddBusDetails1"
        android:onClick="btnAddBusDetails"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Bus Details"
        android:textColor="@color/pureWhite"
        android:background="@drawable/bg"
        android:layout_marginTop="15dp"
        android:id="@+id/btnShowBusDetials"
        android:onClick="btnShowBusDetails"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Ticket Details"
        android:textColor="@color/pureWhite"
        android:background="@drawable/bg"
        android:layout_marginTop="15dp"
        android:id="@+id/btnShowTicketDetails"
        android:onClick="showTicketDetails"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Ticket"
        android:textColor="@color/pureWhite"
        android:background="@drawable/bg"
        android:layout_marginTop="15dp"
        android:id="@+id/btnDeleteTicket"
        android:onClick="btnDeleteTicket"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Bus Details"
        android:textColor="@color/pureWhite"
        android:background="@drawable/bg"
        android:layout_marginTop="15dp"
        android:id="@+id/btnDeleteBusDetails1"
        android:onClick="btnDeleteBusDetails"
        />









</LinearLayout>